{
  "name": "@dash-ui/stylis",
  "version": "1.0.1",
  "homepage": "https://github.com/dash-ui/stylis#readme",
  "repository": "github:dash-ui/stylis",
  "bugs": "https://github.com/dash-ui/stylis/issues",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredLunde.com)",
  "license": "MIT",
  "description": "A fork of @emotion/stylis that makes it even smaller, still",
  "keywords": [
    "stylis"
  ],
  "main": "dist/main/stylis.min.js",
  "module": "dist/module/stylis.min.js",
  "unpkg": "dist/umd/dash-stylis.js",
  "source": "src/stylis.min.js",
  "files": [
    "/dist",
    "/src",
    "/types"
  ],
  "exports": {
    ".": {
      "browser": "./dist/module/stylis.min.js",
      "import": "./dist/esm/stylis.min.mjs",
      "require": "./dist/main/stylis.min.js",
      "umd": "./dist/umd/dash-stylis.js",
      "source": "./src/stylis.min.js",
      "default": "./dist/main/stylis.min.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "sideEffects": false,
  "scripts": {
    "build": "node scripts/build && lundle build",
    "build-types": "cp -R node_modules/@emotion/stylis/types/* types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,js,md,yml,json}\"",
    "lint": "eslint .",
    "prepublishOnly": "npm run lint && npm run test && npm run build && npm run format",
    "test": "jest",
    "validate": "npm run build-types && npm run lint && npm run test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --write"
    ],
    "**/*.{md,yml,json,eslintrc,prettierrc}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ],
    "rules": {
      "no-fallthrough": "off",
      "no-useless-escape": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.js"
        ],
        "settings": {
          "import/resolver": {
            "jest": {
              "jestConfigFile": "./package.json"
            }
          }
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "test",
    "*.config.js"
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src",
      "test"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "globals": {
      "__DEV__": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  },
  "devDependencies": {
    "babel-jest": "latest",
    "eslint": "latest",
    "eslint-config-lunde": "latest",
    "husky": "latest",
    "jest": "latest",
    "jscodeshift": "^0.10.0",
    "lint-staged": "latest",
    "lundle": "latest",
    "prettier": "latest",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8",
    "stylis": "^3.5.4",
    "stylis-rule-sheet": "^0.0.10"
  },
  "dependencies": {},
  "peerDependencies": {}
}
